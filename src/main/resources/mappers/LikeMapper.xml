<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.sns.like.mapper.LikeMapper">
 
 	<select id="selectLikeList" resultType="map">
 	
		SELECT
			*
		FROM
			`like`
			
	</select>

	<select id="selectLikeCountByPostIdUserId" resultType="int" parameterType="map">
		
		SELECT 
			COUNT(*)
		FROM
			`like`
		WHERE
			`postId` = #{postId}
		AND
			`userId` = #{userId}
		
		
	</select>  
	
	
	<insert id="addLikeByPostIdUserId" parameterType="map">
		
		INSERT INTO `like`
			(			
				`postId`
				, `userId`
				, `createdAt`
			)
		VALUES
			(
				#{postId}
				, #{userId}
				, NOW()
			)
		
	</insert>
	
	<delete id="deleteLikeByPostIdUserId" parameterType="int" >
		
		DELETE 
		FROM
			`like`
		WHERE
			`postId` = #{postId}
		AND
			`userId` = #{userId}
		
	</delete>
	
	<select id="selectLikeCountByPostId" resultType="int">
	
		SELECT 
			COUNT(*)
		FROM
			`like`
		WHERE
			`postId` = #{postId}
	
	</select>
	

	
 </mapper>