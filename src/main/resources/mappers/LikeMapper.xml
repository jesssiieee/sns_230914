<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.sns.like.mapper.LikeMapper">
 
 	<select id="selectLikeList" resultType="map">
 	
		SELECT
			*
		FROM
			`like`
			
	</select>

